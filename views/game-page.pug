extends layout

append head
  link(rel="stylesheet" href="/stylesheets/gamePage.css")
  link(rel="stylesheet" href="/stylesheets/forms.css")

block content
  .game-page-container
    .game-image
      img(src=`${game.image}`, alt="")
      div.sideCard
  .game-info
    h4= game.developer
    h4(id="release")= game.releaseDate
    a(href=`${game.purchase}` class="purchase") Purchase Now
  .game-rating
    h2 Ratings
    br
    h3= game.likesCount
  div.middleBox
      div.game-title-cat
        h1= title
        br
        h2= game.Category.category
      div.game-sum
        p= game.summary
  div.write-reviews
    div
      button(class='review-button')
        a(href=`/games/${game.id}/review`) Add Review!
      //- each review in reviews
    br
  div.review-container
    if userReview
      .posted-reviews 
        h4= user.username 
        h3(id="reviewTitle")= userReview.title
        hr
        hr
        p= userReview.content

    each review in gameReviews
      div.posted-reviews
        h3(id="reviewTitle")= review.title
        hr
        p= review.content
