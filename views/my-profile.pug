extends layout

append head
    link(rel="stylesheet" href="/stylesheets/login-signup-review.css")
    link(rel="stylesheet" href="/stylesheets/forms.css")


block content
    h1.title #{title}
    div.signup-form
        if errors
            div
                each error in errors
                    div.errors: p= error
        if message
            div
                h3= message
            br
        form(action=`/users/myprofile`, method="post")
                div
                    input(type="hidden", name="_csrf", value=csrfToken)
                div
                    label(for="firstName" class="form-group") First Name
                    input(type="text", name="firstName" class="form-control" value=user.firstName)
                div
                    label(for="lastName" class="form-group") Last Name
                    input(type="text", name="lastName" class="form-control" value=user.lastName)
                div
                    label(for="username" class="form-group") Username
                    input(type="text", name="username" class="form-control" value=user.username)
                div
                    label(for="phone" class="form-group") Phone
                    input(type="tel", name="phone" class="form-control" value=user.phone)
                div
                    label(for="email" class="form-group") Email
                    input(type="email", name="email" class="form-control" value=user.email)
                div
                    label(for="password" class="form-group") Password
                    input(type="password", name="password" class="form-control")
                div
                    label(for="confirmPassword" class="form-group") Confirm Password
                    input(type="password", name="confirmPassword" class="form-control")
                button(type="submit" class="login-signup-button") Update Profile
        br
        form(action=`/users/delete` method='post')
            div
                input(type="hidden", name="_csrf", value=csrfToken)
            div
                button(type="submit" class="login-signup-button" id="profileDeleteBtn" ) Delete Account?
