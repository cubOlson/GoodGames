doctype html
html
  head
      block head
        title="GoodGames"
        <script src="https://kit.fontawesome.com/75a2f1fb3a.js" crossorigin="anonymous"></script>
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/navBar.css')
        link(rel='preconnect' href='https://fonts.gstatic.com')
        link(rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap')

  body
    - var rootPath = `http://localhost:8080`;
    header.bg
      .page-wrap
        //- AUTHENTICATED AUTHENTICATED AUTHENTICATED AUTHENTICATED AUTHENTICATED
        if user
          div.navBar
            //- Left Half of Nav Bar      
            div.navBar__left
              a(href="/")
                img.logo(src="/images/ggLogo.gif")
              div.searchBar
                form(action="/games", method="post")
                  input(type="search", name="searchBar" placeholder="Search" class="search-input")
            //- Right Half of Nav Bar      
            div.navBar__right
              
              form(action=`${rootPath}/users/${user.id}/mygames`,method="get")
                button(type="submit") 
                  .fas.fa-gamepad.navlink 
                  .navlink My Games
              
              a.navlinkbox(href=`${rootPath}/users/${user.id}/mygames`) 
                .fas.fa-gamepad.navlink 
                .navlink My Games
                
              
              div.navlink
                a(href=`${rootPath}/users/${user.id}/myreviews`): i.fas.comment-box My Reviews

              //- div.navlink
              //-   a(href=`${rootPath}/users/${user.id}/myreviews` class="right__attribute") My Reviews
                
              div.navlink
                a(href=`${rootPath}/users/${user.id}/myprofile` class="right__attribute") My Profile
                  <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="user-astronaut" class="profile-button" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                  <path fill="currentColor" d="M64 224h13.5c24.7 56.5 80.9 96 146.5 96s121.8-39.5 146.5-96H384c8.8 0 16-7.2 16-16v-96c0-8.8-7.2-16-16-16h-13.5C345.8 39.5 289.6 0 224 0S102.2 39.5 77.5 96H64c-8.8 0-16 7.2-16 16v96c0 8.8 7.2 16 16 16zm40-88c0-22.1 21.5-40 48-40h144c26.5 0 48 17.9 48 40v24c0 53-43 96-96 96h-48c-53 0-96-43-96-96v-24zm72 72l12-36 36-12-36-12-12-36-12 36-36 12 36 12 12 36zm151.6 113.4C297.7 340.7 262.2 352 224 352s-73.7-11.3-103.6-30.6C52.9 328.5 0 385 0 454.4v9.6c0 26.5 21.5 48 48 48h80v-64c0-17.7 14.3-32 32-32h128c17.7 0 32 14.3 32 32v64h80c26.5 0 48-21.5 48-48v-9.6c0-69.4-52.9-125.9-120.4-133zM272 448c-8.8 0-16 7.2-16 16s7.2 16 16 16 16-7.2 16-16-7.2-16-16-16zm-96 0c-8.8 0-16 7.2-16 16v48h32v-48c0-8.8-7.2-16-16-16z"></path>
                  </svg>
              form(action='/users/logout' method='post')
                button.navButton(type='submit') Log Out
        //- NOT AUTHENTICATED NOT AUTHENTICATED NOT AUTHENTICATED NOT AUTHENTICATED NOT AUTHENTICATED
        else
          div.navBar
              div.navBar__left
                a(href="/")
                  img.logo(src="/images/ggLogo.gif")
                div.searchBar
                  form(action="/games", method="post")
                    input(type="search", name="searchBar" placeholder="Search" class="search-input")
              div.navBar__right
                .navButton
                  a(href="/users/login" class="right-login-signup") Log In
                a(href="/users/signup"): .navButton Sign Up
        .page-wrap
            block content
      
