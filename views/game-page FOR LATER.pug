extends layout
append head
link(rel="stylesheet" href="/stylesheets/gamePage.css")
  link(rel="stylesheet" href="/stylesheets/forms.css")
block content
  .game-page-container
    div 
      .game-image
        img(src=`${game.image}`, alt="")
        div.game-title-cat
          h1= title
          br
          h4= game.Category.category
  div.sideCard
    div.column-game 
      .game-info
        h4= game.developer
        h4(id="release")= game.releaseDate
        a(href=`${game.purchase}` class="purchase") Purchase Now
      .game-rating
        h2 Ratings
        br
        h3= game.likesCount
    .game-sum
        p= game.summary
  div.write-reviews
    div
        hr
        p= userReview.content
      each review in gameReviews
        div.posted-reviews
          h3(id="reviewTitle")= review.title
          hr
          p= review.content