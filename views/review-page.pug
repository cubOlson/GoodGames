extends layout 

append head
  link(rel="stylesheet" href="/stylesheets/login-signup.css")

block content 
      div.signup-form
        if errors 
          div
            each error in errors 
              .errors: p=error 
        form(action=`/games/${game.id}/review` method='post')
          input(type='hidden' name='_csrf' value= csrfToken)
          div
            label.review-label(for='title' class='form-group') Title
            input.review-input(type='text' name='title' class='form-control')
          div
            label.review-label(for='content' class='form-group') Review
            textarea.review-input(name='content')
          div   
            select(name='likedStatus' id='likedSelect' class='form-control')
              option(value='liked' class='form-group') Liked
              option(value='disliked') Disliked
          button.review-button(type='submit' class='form-control') Add Review